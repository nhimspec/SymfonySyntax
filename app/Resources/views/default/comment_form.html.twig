{{ form_start(form, { method: 'POST', action: path('comment_new', { 'slug': post.slug }) }) }}
<fieldset>
    <legend>Add Comment</legend>

    {{ form_errors(form) }}

    <div class="form-group {% if not form.content.vars.valid %}has-error{% endif %}">
        {{ form_label(form.content) }}
        {{ form_errors(form.content) }}
        {{ form_widget(form.content, { attr: { rows: 10 } }) }}
    </div>

    <div class="form-group">
        <button class="btn btn-primary pull-right" type="submit">Publish Comment</button>
    </div>
</fieldset>
{{ form_end(form) }}