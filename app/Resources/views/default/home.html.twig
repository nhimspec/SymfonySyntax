{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <h1 class="heading">All Post</h1>
        <div class="posts">
            {% for post in posts %}
                <article class="post">
                    <h2 class="title">
                        <a href="{{ path('post_detail', { slug: post.slug }) }}">{{ post.title }}</a>
                    </h2>
                    <a href="{{ path('post_detail',{slug: post.slug}) }}">
                        <div class="thumbnail" style="background-image: url('{{ vich_uploader_asset(post,'thumbnail') }}')"></div>
                    </a>
                </article>
                    <p class="summary">{{ post.summary }}</p>
                </article>
            {% endfor %}
            <div class="navigation text-center">
                {{ pagerfanta(posts, 'twitter_bootstrap3', { routeName: 'post_show' }) }}
            </div>
        </div>
    </div>
{% endblock %}